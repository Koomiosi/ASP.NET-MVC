@model IEnumerable<WebAppFirst.Models.Shippers>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShipperID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region.RegionDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ShipperID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Region.RegionDescription)
        </td>
        <td>
            <a class="btn btn-primary" href="/Shippers/Details/@item.ShipperID"><i class="fa fa-info"></i></a>
            <a class="btn btn-primary" href="/Shippers/Edit/@item.ShipperID"><i class="fa fa-edit"></i></a>
            <a class="btn btn-primary" href="/Shippers/Delete/@item.ShipperID"><i class="fa fa-trash-o"></i></a>
        </td>
    </tr>
}

</table>
